@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/_ViewStart.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="row justify-content-center mt-5">
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Login</h3>
                </div>
                <div class="card-body">
                    <form action="@Url.Action("Login","Inicio")" method="post">
                        <div class="mb-3">
                            <label>Correo</label>
                            <input type="email" name="correo" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label>Contraseña</label>
                            <input type="password" name="clave" class="form-control" required />
                        </div>

                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-danger">
                                @(ViewBag.Mensaje)
                            </div>
                        }

                        <div class="mb-3">
                            <div class="d-grid">
                                <button class="btn btn-primary" type="submit">Ingresar</button>
                                <a class="btn btn-link" href="@Url.Action("Registrar","Inicio")">¿No tienes una cuenta? ¡Registrate!</a>
                                <a class="btn btn-link" href="@Url.Action("Restablecer","Inicio")">¿Has olvidado tú contraseña?</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>