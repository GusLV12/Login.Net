@{
    ViewData["Title"] = "Registrar";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <div class="row justify-content-center mt-5">
        <div class="col-5">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Registrate</h3>

                    @if (ViewBag.Creado == null)
                    {
                        <form action="@Url.Action("Registrar","Inicio")" method="post">
                            <div class="mb-3">
                                <label>Nombre</label>
                                <input type="text" name="Nombre" value="@(ViewBag.Nombre ?? "")" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Correo</label>
                                <input type="email" name="Correo" value="@(ViewBag.Correo ?? "")" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Contraseña</label>
                                <input type="password" name="clave" class="form-control" required />
                            </div>
                            <div class="mb-3">
                                <label>Confirmar</label>
                                <input type="password" name="ConfirmarClave" class="form-control" required />
                            </div>

                            @if (ViewBag.Mensaje != null)
                            {
                                <div class="alert alert-danger">
                                    @(ViewBag.Mensaje)
                                </div>
                            }

                            <div class="mb-3">
                                <div class="d-grid">
                                    <button class="btn btn-primary" type="submit">Registrarse</button>
                                    <a class="btn btn-link" href="@Url.Action("Registrar","Inicio")">¿No tienes una cuenta? ¡Registrate!</a>
                                    <a class="btn btn-link" href="@Url.Action("Login","Inicio")">¿Tienes una cuenta? Incia sesión</a>
                                </div>
                            </div>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-success">
                            <p>@(ViewBag.Mensaje)</p>
                            <a class="btn btn-link" href="@Url.Action("Login","Inicio")">Ingresar</a>
                        </div>
                    }
                </div>
                <div class="card-body">
                </div>
            </div>
        </div>
    </div>
</body>
</html>